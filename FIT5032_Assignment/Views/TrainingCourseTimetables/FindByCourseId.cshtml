@model FIT5032_Assignment.Models.TimetableViewModel
@{
    ViewBag.Title = "FindByCourseId";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<FIT5032_Assignment.Models.TrainingCourseTimetable> timetable = Model.Timetables;
}

<h2>My Couse Timetable</h2>

<p>
    @if (!Model.CourseId.IsOver)
    {
        @Html.ActionLink("Create New", "Create", new { courseId = Model.CourseId.Id })
    }

</p>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in timetable)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseId.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseStartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseEndTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Back", "Index", "TrainingCourses")
</p>

@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />


